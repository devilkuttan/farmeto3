<!-- products section starts  -->

<section class="products" id="products">
    <h1 class="heading"><span>products</span></h1>
    <% if (products.length === 0) { %>
        <h1>No Posts</h1>
    <% } else { %>
        <div class="swiper product-slider">
            <div class="swiper-wrapper">
                <% for (let i = 0; i < Math.ceil(products.length / 3); i++) { %>
                    <div class="swiper-slide">
                        <% for (let j = i * 3; j < Math.min((i + 1) * 3, products.length); j++) { %>
                            <% if (j !== (i * 3) + 2 || 
                                (products[j].dataValues.id !== products[i * 3].dataValues.id && 
                                products[j].dataValues.id !== products[i * 3 + 1].dataValues.id)) { %>
                                    <div class="box">
                                        <a href="/buyer/<%= profile.id %>/dashboard/save/<%= products[j].id %>">
                                            <img src="<%= products[j].dataValues.image %>" alt="">
                                        </a>
                                        <h3><%= products[j].dataValues.name %></h3>
                                        <p>Category: <%= products[j].dataValues.category %></p>
                                        <p>Price: <%= products[j].dataValues.price %></p>
                                        <p>Quantity: <%= products[j].dataValues.quantity %></p>
                                        <p>Description: <%= products[j].dataValues.description %></p>
                                        <a href="/buyer/<%= profile.id %>/dashboard/save/<%= products[j].id %>" class="btn">View Product</a>
                                    </div>
                                    
                            <% } %>
                        <% } %>
                    </div>
                <% } %>
            </div> <!-- Close swiper-wrapper -->
        </div> <!-- Close product-slider -->
    <% } %>
</section>


















